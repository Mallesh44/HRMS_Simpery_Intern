<!DOCTYPE html>
<html lang="en">
{{> header}}
<body>
    <nav>
        <div class="logo">SalveHR - HRMS</div>
        <div class="menu">
                <a href="/home">Home</a>
                <a href="/employee">Employee-Management</a> 
                <a href="/legal-framework">Legal Framework</a>
                <a href="/profile">Profile</a>
                <a href="/auth/logout">Logout</a>
        </div>
    </nav>
<h3>Edit Employee Details</h3>

{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}
{{#each rows}}

<form method="post" action="/edituser/{{this.ID}}" autocomplete="false">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" value="{{this.NAME}}">
    </div>
    <div class="form-group">
        <label for="age">Age</label>
        <input type="number" name="age" value="{{this.AGE}}">
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input type="text" name="city" value="{{this.CITY}}">
    </div>
    <div class="form-group">
        <label for="department">Department</label>
        <input type="text" name="department" value="{{this.DEPARTMENT}}">
    </div>
    <div class="form-group">
        <label for="designation">Designation</label>
        <input type="text" name="designation" value="{{this.DESIGNATION}}">
    </div>
    <div class="form-group">
        <label for="salary">Salary</label>
        <input type="number" name="salary" value="{{this.SALARY}}">
    </div>
    <div class="form-group">
        <label for="dateOfJoining">Date of Joining</label>
        <input type="date" name="dateOfJoining" value="{{this.DATE_OF_JOINING}}">
    </div>
    <div class="form-group">
        <button type="submit">Save Changes</button>
        <a href="/">View All</a>
    </div>
</form>

{{/each}}
 </body>
</html>